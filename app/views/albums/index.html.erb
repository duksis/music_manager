<%- model_class = Album -%>
<div class="page-header">
  <h1><%= model_class.model_name.human.pluralize %></h1>
</div>


<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= link_to album.title, album_path(album) %></td>
        <td>
          <%= link_to 'Edit', edit_album_path(album), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', album_path(album), :method => :delete,
            :data => { :confirm => 'Are you sure?' },
            :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Add', new_album_path, :class => 'btn btn-primary' %>
