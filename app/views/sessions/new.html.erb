<%= form_tag login_path, :class => 'form-horizontal' do %>
  <div class="control-group">
    <%= label_tag :name, nil, :class => 'control-label' %>
    <div class="controls">
      <%= text_field_tag :name, nil, :placeholder => 'Name' %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :password, nil, :class => 'control-label' %>
    <div class="controls">
      <%= password_field_tag :password, nil, :placeholder => 'Password' %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= submit_tag 'Log in', :class => 'btn btn-primary' %>
      <%= link_to 'Sign up', new_user_path, :class => 'btn' %>
    </div>
  </div>
<% end %>
